{
  "name": "ai-sdk-api-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npx tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "mcp:stdio": "MCP_MODE=stdio npx tsx src/index.ts",
    "mcp:websocket": "MCP_MODE=websocket npx tsx src/index.ts",
    "mcp:cli": "npx tsx src/mcp/cli.ts",
    "hybrid": "ENABLE_MCP_WEBSOCKET=true npx tsx src/index.ts"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "@hono/node-server": "^1.8.0",
    "@hono/swagger-ui": "^0.2.0",
    "@hono/zod-openapi": "^0.9.0",
    "ai": "^3.0.0",
    "@ai-sdk/openai": "^0.0.24",
    "openai": "^4.0.0",
    "zod": "^3.22.0",
    "dotenv": "^16.0.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0"
  }
}